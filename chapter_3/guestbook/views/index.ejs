<%- include ('header.ejs') %>
<% if (entries.length) { %>
  <% entries.forEach(function(entry) { %>
    <div class="card b">
      <div class="card-header">
        <div class="form-text text-muted float-right">
          <%= entry.published %>
        </div>
        <%= entry.title %>
      </div>
      <div class="card-body">
        <%= entry.body %>
      </div>
    </div>
  <% }) %>
<% } else { %>   No entries! <a href="/new-entry">Add one!</a>
<% } %>
